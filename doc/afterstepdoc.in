#
# If netscape isn't available, run lynx in a xiterm
# First try standard path, then local, then other possible paths
#

for app in mozilla firefox konqueror opera netscape; do 
	full_path=`which $app`
	if [ "x$full_path" != "x" ] ; then
     		$app @datadir@/afterstep/doc/html/index.html & exit
	fi
done

for lynx in /usr/bin/lynx /bin/lynx /usr/local/bin/lynx ; do
    if [ -x $lynx ] ; then
	if [ -x /usr/bin/aterm ] ; then
	    exec /usr/bin/aterm -e $lynx @datadir@/afterstep/doc/html/index.html &
	elif [ -x /usr/local/bin/aterm ] ; then
	    exec /usr/local/bin/aterm -e $lynx @datadir@/afterstep/doc/html/index.html &
	else			       
	    exec xterm -bg black -fg white -sl 500 -vb -e $lynx @datadir@/afterstep/doc/html/index.html &
	fi
    fi
done
